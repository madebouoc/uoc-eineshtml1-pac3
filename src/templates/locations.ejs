<script>
    //Script para el efecto de la imagen "Secuencia de Ruta".
    //Cada path tiene un idNNN numerado en orden. Este script activa el "fade in" secuencialmente.
    window.onload = function() {
        let paths = Array.from(document.querySelectorAll("path"));
        // ordena los paths por ID
        paths.sort((a, b) => parseInt(a.id.replace("id", "")) - parseInt(b.id.replace("id", "")));

        for(let i = 0; i < paths.length; i++) {
            //AÃ±adimos un lag entre punto y punto de la imagen.
            paths[i].style.animationDelay = `${i * 0.015}s`;
        }
    }
</script>


