<!doctype html>
<html lang="<%= currentLanguage %>">

<head>
    <title><%= header.titulo %></title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- SEO -->
    <meta name="description" content="<%= header.titulo %> - <%= header.subtitulo %>">
    <meta name="keywords" content="P<%= header.keywords %>">
    <meta name="author" content="<%= footer.nombre %>">
    <meta name="robots" content="index, follow">

    <!-- Color de barra de estado para móviles -->
    <meta name="msapplication-navbutton-color" content="#320000">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="theme-color" content="#320000">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <!-- Recursos -->
    <script type="module" src="../../assets/app.js" defer></script>
    <link rel="stylesheet" href="../../assets/styles.scss" />
    <!-- https://escss.blogspot.com/2015/04/carga--css-sin-bloqueo-pagina.html -->
    <link rel="stylesheet" href="../../assets/styles-lazy.scss" media="none" onload="if(media!='all')media='all'"/>
    <link rel="icon" type="image/svg+xml" href="../../assets/logoGaudi-bolder.svg" media="none" onload="if(media!='all')media='all'">
    <noscript>
        <link rel="stylesheet" href="../../assets/styles-lazy.scss"/>
        <link rel="icon" type="image/svg+xml" href="../../assets/logoGaudi-bolder.svg">
    </noscript>
</head>

<body>
    <div id="top"></div>
    <header>
        <div class="container">
            <div class="title">
                <a href="index.html"><img src="../../assets/logoGaudi-bolder.svg" alt="logo Gaudí" aria-label="logo Gaudí" loading="lazy"></a>
                <h1><a href="index.html"><%= header.titulo %></a></h1>
            </div>

            <!--Botones MENU y LANG para mobile-->
            <!-- https://icons.getbootstrap.com/ -->
            <button id="mainMenuButton" name="mainMenuButton" aria-label="Main Menu"><i class="bi bi-list"/></button>
            <input type="checkbox" id="mainMenuCheckbox" autocomplete="off">
            <button id="langSelectorButton" name="langSelectorButton" aria-label="Language Selector"><i class="bi bi-globe2"/></button>
            <input type="checkbox" id="langSelectorCheckbox" autocomplete="off">

            <!--Cuerpo del menu principal-->
            <nav class="mainMenuContent">
                <!-- De momento lo quito <i class="bi bi-house"> <i class="bi bi-buildings"> <i class="bi bi-eye"> <i class="bi bi-journal">-->
                <ul class="home">
                    <li><a href="index.html"><%= header.inicio %></a></li>
                </ul>
                <ul class="locations">
                    <li><a href="sagrada_familia.html"><%= sagradaFamilia.titulo %></a></li>
                    <li><a href="parque_guell.html"><%= parqueGuell.titulo %></a></li>
                    <li><a href="casa_mila.html"><%= casaMila.titulo %></a></li>
                    <li><a href="casa_batllo.html"><%= casaBatllo.titulo %></a></li>
                    <li><a href="palacio_guell.html"><%= palacioGuell.titulo %></a></li>
                    <li><a href="casa_vicens.html"><%= casaVicens.titulo %></a></li>
                </ul>
                <ul class="others">
                    <li><a href="locations.html"><%= locations.titulo %></a></li>
                    <li><a href="acerca_de.html"><%= acercaDe.titulo %></a></li>
                </ul>
            </nav>

            <!--Cuerpo del menu de idioma-->
            <nav class="langSelectorContent">
                <ul >
                    <li><a href="../ca/index.html"><img src="../../assets/speech/ca.svg" alt="catalan flag" loading="lazy"><div><%= header.catalan %></div></a></li>
                    <li><a href="../es/index.html"><img src="../../assets/speech/es.svg" alt="spanish flag" loading="lazy"><div><%= header.spanish %></div></a></li>
                    <li><a href="../en/index.html"><img src="../../assets/speech/en.svg" alt="english flag" loading="lazy"><div><%= header.english %></div></a></li>
                    <!--<li><a href="../fr/index.html"><img src="../../assets/speech/fr.svg" alt="french flag"><div><%= header.french %></div></a></li>-->
                </ul>
            </nav>
        </div>
    </header>

    <button id="boton-top" name="boton-top" aria-label="Botón de uso interno"><i class="bi bi-arrow-up"/></button>
